<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context="com.aec.project.customlistview.HotelDetails">

        <ImageView
            android:id="@+id/image_main"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cover"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image_main"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="#FFFFFF"

        >


        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel Kolkata International"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/hotel_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel Kolkata International"
            android:textSize="18sp"
            android:textStyle="italic"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/hotel_rating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating : "
                android:textSize="18sp"
                android:textStyle="normal"


                />
            <TextView
                android:id="@+id/hotel_rating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="#00FF00"
                android:alpha="1.0"
                />
            <TextView
                android:id="@+id/hotel_rating3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Very Good"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:background="#00FF00"
                android:alpha="0.6"
                />

            <TextView
                android:id="@+id/hotel_rating4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1150 Ratings"
                android:padding="2dp"
                android:textSize="18sp"
                android:textStyle="italic"

                />
        </LinearLayout>


    </LinearLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/LL3"
    android:layout_below="@+id/LL"
    android:layout_margin="5dp"
    android:background="#FFFFFF"
    android:padding="5dp"
    android:gravity="center"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Features : "
        android:textStyle="bold"
        android:textSize="20sp"


        android:id="@+id/features"

        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/features"
        android:id="@+id/GV"
        android:columnCount="3"

        android:stretchMode="columnWidth"
        android:gravity="center"

        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Air Condition"
            android:layout_columnWeight="1"
            android:textStyle="italic"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="2. TV"
            android:layout_columnWeight="1"
            android:textStyle="italic"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="3. Geyser"
            android:layout_columnWeight="1"
            android:textStyle="italic"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Free Wifi"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:textStyle="italic"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="5. Card Payment"
            android:layout_columnWeight="1"
            android:textStyle="italic"
            android:textSize="18dp"
            />


    </GridLayout>

</RelativeLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/LL3"
            android:id="@+id/GV2"
            android:columnCount="3"

            android:stretchMode="columnWidth"
            android:gravity="center"

            >

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price : "
                android:layout_columnWeight="1"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="Rs 2799"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:textSize="20dp"
                />


            <TextView
                android:id="@+id/textView73"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount : "
                android:layout_column="0"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/textView84"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="Rs 999"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="right"
                />


            <TextView
                android:id="@+id/textView731"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Payable : "
                android:layout_column="0"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="#EEEEEE"
                />

            <TextView
                android:id="@+id/textView842"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:text="Rs 1599"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="right"
                android:background="#EEEEEE"
                android:padding="5dp"
                />


        </GridLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GV2"
        android:text="Book Now"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textColor="#EEEEFF"
        android:paddingTop="5dp"

        />


</RelativeLayout>
